{
  "name": "mapbox-futuristic",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run postbuild",
    "postbuild": "mkdir -p dist/data && cp -R public/data/* dist/data/ 2>/dev/null || true",
    "preview": "vite preview --port 5173",
    "clean": "rm -rf dist",
    "prepare": "mkdir -p public/data && cp -R data/* public/data/ 2>/dev/null || true"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "mapbox-gl": "^2.15.0"
  },
  "devDependencies": {
    "vite": "^5.1.0",
    "@vitejs/plugin-react": "^4.0.0"
  }
}
